<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zuccessful.trueharmony">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
     <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name=".application.SakshamApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".activities.LibraryPDF"
            android:screenOrientation="portrait"
            ></activity>

        <service
            android:name=".services.MedService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.NewAlarmService"
            android:enabled="true"
            android:exported="true" />
        <activity android:name=".activities.RegisterActivity"
            android:screenOrientation = "portrait"
            android:theme="@style/LoginScreenTheme"/>
        <activity android:name=".activities.Report" />

        <service
            android:name=".services.SensorService"
            android:enabled="true"
            android:exported="true" />

        <activity android:screenOrientation = "portrait"
            android:name=".activities.MyDayActivity"
            android:label="@string/myday" />
        <activity android:screenOrientation = "portrait"
            android:name=".activities.MainActivity"
            android:label="@string/app_name"

            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:screenOrientation = "portrait"
            android:name=".activities.LoginActivity"
            android:theme="@style/LoginScreenTheme">

        </activity>
        <activity android:screenOrientation = "portrait"
            android:name=".activities.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:screenOrientation = "portrait"
            android:name=".activities.HealthMonitorActivity"
            android:label="@string/title_activity_health_monitor_tabbed" />
        <activity android:screenOrientation = "portrait"
            android:name=".activities.MedicalAdherenceActivity"
            android:label="@string/title_activity_medical_adherence" />
        <activity android:name=".activities.AddMedRecActivity" android:screenOrientation = "portrait" />
        <activity android:name=".activities.AddDailyRoutActivity"  android:screenOrientation = "portrait"/>
        <activity
            android:name=".activities.Injection_Schedule" android:screenOrientation = "portrait"
            android:label="@string/title_activity_injection_schedule" />
        <activity android:name=".activities.AddInjActivity" android:screenOrientation = "portrait" />
        <activity android:screenOrientation = "portrait"
            android:name=".activities.LibraryActivity"
            android:label="@string/library" />

        <service
            android:name=".services.AlarmService"
            android:enabled="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver android:name=".receivers.AlarmReceiver" />
        <receiver android:name=".receivers.AlarmActionReceiver" />
        <receiver
            android:name=".receivers.ReminderReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.ReminderActionReceiver" />

        <activity android:screenOrientation = "portrait"
            android:name=".activities.RecordPledge"
            android:label="Record Pledge" />
        <activity android:name=".activities.DailyRoutineActivity" android:screenOrientation = "portrait" />
        <activity android:name=".activities.IADLActivity" android:screenOrientation = "portrait" />
        <activity
            android:name=".activities.PSychoeducation" android:screenOrientation = "portrait"
            android:label="@string/psycho_education" />
        <activity android:name=".activities.AdvisoryActivity"  android:screenOrientation = "portrait"/>
        <activity
            android:name=".activities.AboutMe" android:screenOrientation = "portrait"
            android:label="@string/title_activity_about_me" />
        <activity android:name=".activities.AlarmPref" android:screenOrientation = "portrait" />
        <activity android:name=".utilities.CustomImageCamera" android:screenOrientation = "portrait" />
        <activity android:name=".activities.PDFRenderActivity" android:screenOrientation="portrait"></activity>

        <activity android:screenOrientation = "portrait"
            android:name=".activities.DialogeActivity"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".activities.UserProfileActivity" android:screenOrientation = "portrait" />
        <!-- registering the receiver -->
        <receiver android:name=".receivers.MyReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />


            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.NetworkReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>