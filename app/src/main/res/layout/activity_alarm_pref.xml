<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zuccessful.trueharmony.activities.AlarmPref"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="362dp"

        android:layout_height="359dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/songButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="96dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="60dp"
                android:text="Song"
                app:layout_constraintBottom_toTopOf="@+id/pledgeButton"
                app:layout_constraintEnd_toStartOf="@+id/alarmButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/alarmButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="96dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="60dp"
                android:text="Alarm"
                app:layout_constraintBottom_toTopOf="@+id/msgButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/songButton"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/pledgeButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="75dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="38dp"
                android:text="Record a pledge"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/msgButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/songButton" />

            <Button
                android:id="@+id/msgButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="75dp"
                android:layout_marginEnd="36dp"
                android:text="Text message"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pledgeButton"
                app:layout_constraintTop_toBottomOf="@+id/alarmButton" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
